{
  "compilerOptions": {
    "module": "commonjs",
    "target": "es2019",
    "esModuleInterop": true,
    "declaration": true,
    "strict": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "inlineSourceMap": true
  },
  "include": [
    "./scripts/**/*"
  ],
  "exclude": [
    "node_modules"
  ]
}
